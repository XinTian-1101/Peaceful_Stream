<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WellnessModule.M1_MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <include layout="@layout/m1_appbar" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:paddingStart="55dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/search_background"
        android:ems="10"
        android:hint="What do you want to listen to?"
        android:inputType="text"
        android:textSize="15sp"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/myPlaylistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:paddingTop="5dp"
            android:text="My Playlist"
            android:textColor="@color/playlist_name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/playlistRV"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlistRV"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="212dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/relaxTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:text="Relaxation Songs"
            android:textColor="@color/playlist_name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/ic_peacefulMedi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playlistRV"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/ic_lofiMedi"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="404dp"
            android:background="@drawable/m1_lofimedi_ic"
            android:contentDescription="lol"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_peacefulMedi"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Nature Music"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ic_peacefulMedi"
            app:layout_constraintTop_toBottomOf="@+id/ic_peacefulMedi" />

    <TextView
        android:id="@+id/title_lofiMedi"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="lofi meditation"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ic_lofiMedi"
        app:layout_constraintTop_toBottomOf="@+id/ic_lofiMedi" />

        <ImageButton
            android:id="@+id/ic_peacefulMedi"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="404dp"
            android:background="@drawable/m1_peacefulmedi_ic"
            android:contentDescription="lol"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/goodNightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:text="Good Night Songs"
            android:textColor="@color/playlist_name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/ic_peacefulPiano"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_peacefulMedi" />

        <ImageButton
            android:id="@+id/ic_peacefulPiano"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/m1_peacefulpiano_ic"
            android:contentDescription="lol"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ic_mediVideo"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="784dp"
            android:background="@drawable/m1_meditate_icon"
            android:contentDescription="lol"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_peacefulPiano"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Peaceful Piano"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ic_peacefulPiano"
            app:layout_constraintTop_toBottomOf="@+id/ic_peacefulPiano" />

        <TextView
            android:id="@+id/videoPlaylistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:text="Meditation Videos"
            android:textColor="@color/playlist_name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/ic_mediVideo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_peacefulPiano" />

        <TextView
            android:id="@+id/title_mediVideo"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="Professional Wild Child"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ic_mediVideo"
            app:layout_constraintTop_toBottomOf="@+id/ic_mediVideo" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_bar"
        app:layout_constraintStart_toStartOf="@+id/search_bar"
        app:layout_constraintTop_toTopOf="@+id/search_bar"
        app:srcCompat="@drawable/m1_ic_search_glass"
        app:tint="@color/search" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>