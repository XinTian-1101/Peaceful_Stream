<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyModule.M3_RealTimeLocation">

    <include
        layout="@layout/sharelocation_bar" />


    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="338dp"
        android:layout_height="437dp"
        android:layout_alignTop="@+id/LocateTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/LocateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="537dp"
        android:fontFamily="sans-serif"
        android:text="@string/locationTitle"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/LocateTitle"
        android:layout_toRightOf="@id/LocateTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/m3_location_icon" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/google_map"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="470dp"
        >

        <ImageButton
            android:id="@+id/BtnshareLocation"
            android:layout_marginStart="5dp"
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:background="@drawable/m3_blue_fourside_roundbutton"
            android:text="@string/shareLocation"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/shareLocation"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            app:srcCompat="@drawable/m3_share_icon" />

    </FrameLayout>

</RelativeLayout>