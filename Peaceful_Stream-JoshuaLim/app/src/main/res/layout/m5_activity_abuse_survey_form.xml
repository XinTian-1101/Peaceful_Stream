<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include
            layout="@layout/abuse_bar"/>

        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="85dp"
            android:text="1) Have you ever been emotionally abused by a \n\n   partner?"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question1">

            <RadioButton
                android:id="@+id/radio_oneone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Never" />

            <RadioButton
                android:id="@+id/radio_onetwo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Rarely" />

            <RadioButton
                android:id="@+id/radio_onethree"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Sometimes" />

            <RadioButton
                android:id="@+id/radio_onefour"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Often" />

            <RadioButton
                android:id="@+id/radio_onefive"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Always" />
        </RadioGroup>

        <TextView
            android:id="@+id/question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:text="2) What kind of emotions did you feel as a result of \n\n   the emotional abuse?"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <EditText
            android:id="@+id/editTextAns2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/m5_rectanglesurvey2"
            android:ems="10"
            android:gravity="start|top"
            android:layout_marginStart="30dp"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:hint=" Please enter your response"
            android:inputType="textMultiLine"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question2" />

        <TextView
            android:id="@+id/question3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:text="3) Did you ever try to talk to your partner about the \n\n   emotional abuse?"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextAns2" />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question3">

            <RadioButton
                android:id="@+id/radio_threeone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Yes"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="543dp" />

            <RadioButton
                android:id="@+id/radio_threetwo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="No"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="544dp" />

        </RadioGroup>

        <TextView
            android:id="@+id/question4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:text="4) Did the emotional abuse have any impact on your \n\n   relationship?"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup3" />

        <!-- RadioGroup for Question 4 -->
        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question4">

            <RadioButton
                android:id="@+id/radio_fourone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Insignificant" />

            <RadioButton
                android:id="@+id/radio_fourtwo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Minor" />

            <RadioButton
                android:id="@+id/radio_fourthree"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Moderate" />

            <RadioButton
                android:id="@+id/radio_fourfour"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Major" />

            <RadioButton
                android:id="@+id/radio_fourfive"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="Severe" />
        </RadioGroup>

        <TextView
            android:id="@+id/question5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:text="5) Have you ever sought help for the emotional \n\n   abuse?"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup4" />

        <!-- RadioGroup for Question 5 -->
        <RadioGroup
            android:id="@+id/radioGroup5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question5">

            <RadioButton
                android:id="@+id/radio_fiveone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Yes"
                android:layout_marginBottom="3dp"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="543dp" />

            <RadioButton
                android:id="@+id/radio_fivetwo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="No"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="544dp" />

        </RadioGroup>

        <Button
            android:id="@+id/button"
            android:layout_width="119dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/m5_btncolor"
            android:text="Submit"
            android:textAlignment="center"
            android:textColor="#444444"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/theme2_babyblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>