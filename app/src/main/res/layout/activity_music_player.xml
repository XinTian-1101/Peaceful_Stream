<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MusicPlayer">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="283dp"
        android:layout_height="283dp"
        android:layout_marginTop="76dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/roc_image" />

    <TextView
        android:id="@+id/title_song"
        android:layout_width="282dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:text="Song Name"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/name_artist"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-10dp"
        android:text="Artist Name"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_song" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="285dp"
        android:layout_height="25dp"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_artist" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_pause"
        app:tint="#333131" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@android:color/transparent"
        android:visibility="gone"
        android:contentDescription="Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_play"
        app:tint="#333131" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Next Song"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_media_next"
        app:tint="#333131" />

    <ImageButton
        android:id="@+id/prevButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Previous Song"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_previous"
        app:tint="#333131" />

    <ImageButton
        android:id="@+id/shuffleButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Next Song"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_shuffle_lol"
        app:tint="#333131" />

    <ImageButton
        android:id="@+id/loopButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Previous Song"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_repeat"
        app:tint="#333131" />

    <TextView
        android:id="@+id/totalDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:text="0:00"
        app:layout_constraintStart_toEndOf="@+id/seekBar"
        app:layout_constraintTop_toTopOf="@+id/seekBar" />

    <TextView
        android:id="@+id/timeElapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:text="0:00"
        app:layout_constraintEnd_toStartOf="@+id/seekBar"
        app:layout_constraintTop_toTopOf="@+id/seekBar" />
</androidx.constraintlayout.widget.ConstraintLayout>