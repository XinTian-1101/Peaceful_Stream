<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/sosIcon"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/left_round_icon"
            android:contentDescription="@string/app_name"
            android:scrollbarSize="5dp"
            android:src="@drawable/sos_icon_foreground"
             />

        <Button
            android:id="@+id/emergencyDailButton"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@drawable/right_round_icon"
            android:fontFamily="@font/baloo"
            android:keepScreenOn="true"
            android:text="@string/emergency"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageButton
            android:id="@+id/locationIcon"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/left_round_icon"
            android:contentDescription="@string/app_name"
            android:scrollbarSize="5dp"
            android:src="@drawable/share_location"
            android:visibility="visible" />

        <Button
            android:id="@+id/shareLocationButton"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@drawable/right_round_icon"
            android:fontFamily="@font/baloo"
            android:keepScreenOn="true"
            android:text="@string/location"
            android:textSize="28sp"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="376dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2">

        <ImageButton
            android:id="@+id/emergencyChatIcon"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/left_round_icon"
            android:contentDescription="@string/app_name"
            android:paddingStart="5dp"
            android:src="@drawable/service_chat"
            tools:ignore="RtlSymmetry,ImageContrastCheck" />

        <Button
            android:id="@+id/emergencyChatButton"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@drawable/right_round_icon"
            android:fontFamily="@font/baloo"
            android:keepScreenOn="true"
            android:text="@string/chat"
            android:textSize="28sp"
            tools:ignore="MissingConstraints,TextSizeCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>