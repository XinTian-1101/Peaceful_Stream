<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:id="@+id/cardview"
        android:foreground="?android:attr/selectableItemBackground"
        android:transitionName="open_mediaplayer"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:id="@+id/imageView"></ImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="MyRecording_1"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:id="@+id/file_name_text"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="00:44"
                    android:textColor="#8A8A8A"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:id="@+id/file_length_text"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8A8A8A"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="09/12/2023"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/file_timeAdded_text"></TextView>


            </LinearLayout>
            

        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>