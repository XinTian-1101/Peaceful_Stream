    <ImageButton
        android:id="@+id/ButtonAttach"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_attachimage"
        app:layout_constraintStart_toEndOf="@+id/ETPost"
        app:layout_constraintTop_toBottomOf="@+id/UpperPanel" />

    <EditText
        android:id="@+id/ETPost"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:background="#ECECEC"
        android:ems="10"
        android:gravity="start|top"
        android:hint="\n   Have anything to post?"
        android:inputType="textMultiLine"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpperPanel" />

    <ImageButton
        android:id="@+id/ButtonSubmit"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/ETPost"
        app:layout_constraintTop_toBottomOf="@+id/UpperPanel"
        app:srcCompat="@drawable/ic_add" />

    <ImageView
        android:id="@+id/IVPost"
        android:layout_width="364dp"
        android:layout_height="175dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
