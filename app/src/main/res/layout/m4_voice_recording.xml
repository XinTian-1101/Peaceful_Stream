<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/voice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7792B2"
        android:elevation="5dp"
        app:contentInsetStart="1dp">

        <ImageView
            android:id="@+id/back_arrow_voice"
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/m4_back" />

        <TextView
            android:id="@+id/voiceRecoring_Page"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:text="Voice Recording"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>


    </androidx.appcompat.widget.Toolbar>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/pagerSliding"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#C8D1DB"
        android:elevation="4dp"
        android:textColor="@color/black"
        app:pstsTabTextStyle="bold"
        app:pstsIndicatorColor="@color/tab_strip"
        app:pstsIndicatorHeight="5dp"
        app:pstsShouldExpand="true" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#fff"
        />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"></FrameLayout>

</LinearLayout>